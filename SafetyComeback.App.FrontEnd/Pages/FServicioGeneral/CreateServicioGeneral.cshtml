@page
@model SafetyComeback.App.FrontEnd.Pages.FServicioGeneral.CreateServicioGeneralModel
@{
    ViewData["Title"] = "Crear Servicio General";
}
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Crear Servicio General</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label" asp-for=@Model.ServicioGeneral.Nombres></label>
                    <input class="form-control" asp-for=@Model.ServicioGeneral.Nombres />
                    <span asp-validation-for=@Model.ServicioGeneral.Nombres class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for=@Model.ServicioGeneral.Apellidos></label>
                    <input class="form-control" asp-for=@Model.ServicioGeneral.Apellidos />
                    <span asp-validation-for=@Model.ServicioGeneral.Apellidos class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for=@Model.ServicioGeneral.Identificacion></label>
                    <input class="form-control" asp-for=@Model.ServicioGeneral.Identificacion />
                    <span asp-validation-for=@Model.ServicioGeneral.Identificacion class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for=@Model.ServicioGeneral.Edad></label>
                    <input class="form-control" asp-for=@Model.ServicioGeneral.Edad />
                    <span asp-validation-for=@Model.ServicioGeneral.Edad class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for=@Model.ServicioGeneral.Estado_COVID></label>
                    <input class="form-control" asp-for=@Model.ServicioGeneral.Estado_COVID />
                    <span asp-validation-for=@Model.ServicioGeneral.Estado_COVID class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for=@Model.ServicioGeneral.turno></label>
                    <input class="form-control" asp-for=@Model.ServicioGeneral.turno />
                    <span asp-validation-for=@Model.ServicioGeneral.turno class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input class="btn btn-primary" value="Crear ServicioGeneral" type="submit" />
                </div>
            </form>
        </div>
    </div>

</div>