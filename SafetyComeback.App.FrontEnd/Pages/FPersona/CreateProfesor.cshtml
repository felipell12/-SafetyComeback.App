@page
@model SafetyComeback.App.FrontEnd.Pages.FPersona.CreateProfesorModel
@{
    ViewData["Title"] = "Crear Profesor";
}
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Crear Profesor</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label" asp-for=@Model.Profesor.Nombres></label>
                    <input class="form-control" asp-for=@Model.Profesor.Nombres />
                    <span asp-validation-for=@Model.Profesor.Nombres class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for=@Model.Profesor.Apellidos></label>
                    <input class="form-control" asp-for=@Model.Profesor.Apellidos />
                    <span asp-validation-for=@Model.Profesor.Apellidos class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for=@Model.Profesor.Identificacion></label>
                    <input class="form-control" asp-for=@Model.Profesor.Identificacion />
                    <span asp-validation-for=@Model.Profesor.Identificacion class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for=@Model.Profesor.Edad></label>
                    <input class="form-control" asp-for=@Model.Profesor.Edad />
                    <span asp-validation-for=@Model.Profesor.Edad class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for=@Model.Profesor.Estado_COVID></label>
                    <input class="form-control" asp-for=@Model.Profesor.Estado_COVID />
                    <span asp-validation-for=@Model.Profesor.Estado_COVID class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for=@Model.Profesor.FacultadId></label>
                    <input class="form-control" asp-for=@Model.Profesor.FacultadId />
                    <span asp-validation-for=@Model.Profesor.FacultadId class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for=@Model.Profesor.Materia></label>
                    <input class="form-control" asp-for=@Model.Profesor.Materia />
                    <span asp-validation-for=@Model.Profesor.Materia class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input class="btn btn-primary" value="Crear Profesor" type="submit" />
                </div>
            </form>
        </div>
    </div>

</div>