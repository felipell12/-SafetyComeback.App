@page
@model SafetyComeback.App.FrontEnd.Pages.FFacultad.DetailsFacultadModel
@{
    ViewData["Title"] = "Detalle Facultad";
}
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Detalle de Facultad</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form  >
                <div class="form-group">
                    <label class="control-label" asp-for=@Model.Facultad.Id ></label>
                    <input class="form-control" asp-for=@Model.Facultad.Id disabled />
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for=@Model.Facultad.Nombre ></label>
                    <input class="form-control" asp-for=@Model.Facultad.Nombre disabled />
                </div>

            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <h3>Listado de Programas</h3>
        </div>
        @if (Model.Facultad.Programas.Count()>0)
        {
            <table class="table table-sm table-bordered table-striped">
                
                    <thead>
                        <tr>
                            <td>Id</td>
                            <td>Programa/Carrera</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var programa in Model.Facultad.Programas)
                        {
                        <tr>
                            <td>@programa.Id</td>
                            <td>@programa.Nombre</td>
                       </tr>
                        }
                    </tbody>
                   
            </table>
        }
        else
        {
            <p>No existen programas</p>
        }
    </div>
    <div class="form-group">
        <a class="btn btn-primary" asp-page="./ListFacultades" >Lista Facultades</a>
    </div>
</div>
