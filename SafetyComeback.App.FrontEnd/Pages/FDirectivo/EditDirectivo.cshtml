@page
@model SafetyComeback.App.FrontEnd.Pages.FDirectivo.EditDirectivoModel
@{
    ViewData["Title"] = "Editar Directivo";
}
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Editar Directivo</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Edit">
                <input type="hidden" asp-for=@Model.Directivo.Id />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label" asp-for=@Model.Directivo.Nombres></label>
                    <input class="form-control" asp-for=@Model.Directivo.Nombres />
                    <span asp-validation-for=@Model.Directivo.Nombres class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for=@Model.Directivo.Apellidos></label>
                    <input class="form-control" asp-for=@Model.Directivo.Apellidos />
                    <span asp-validation-for=@Model.Directivo.Apellidos class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for=@Model.Directivo.Identificacion></label>
                    <input class="form-control" asp-for=@Model.Directivo.Identificacion />
                    <span asp-validation-for=@Model.Directivo.Identificacion class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for=@Model.Directivo.Edad></label>
                    <input class="form-control" asp-for=@Model.Directivo.Edad />
                    <span asp-validation-for=@Model.Directivo.Edad class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for=@Model.Directivo.Estado_COVID></label>
                    <input class="form-control" asp-for=@Model.Directivo.Estado_COVID />
                    <span asp-validation-for=@Model.Directivo.Estado_COVID class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for=@Model.Directivo.Dependencia></label>
                    <input class="form-control" asp-for=@Model.Directivo.Dependencia />
                    <span asp-validation-for=@Model.Directivo.Dependencia class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input class="btn btn-primary" value="Editar Directivo" type="submit" />
                </div>
            </form>
        </div>
    </div>

</div>