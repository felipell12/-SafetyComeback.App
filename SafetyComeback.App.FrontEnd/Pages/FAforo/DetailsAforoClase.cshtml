@page
@model SafetyComeback.App.FrontEnd.Pages.FAforo.DetailsAforoClaseModel
@{
    ViewData["Title"] = "Detalle Registro";
}
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Detalle Registro Asistencia</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form>
                <div class="form-group">
                    <label class="control-label" asp-for=@Model.AforoClase.Id></label>
                    <input class="form-control" asp-for=@Model.AforoClase.Id disabled />
                    <label class="control-label" asp-for=@Model.AforoClase.ClaseId></label>
                    <input class="form-control" asp-for=@Model.AforoClase.ClaseId disabled/>
                    <label class="control-label" asp-for=@Model.AforoClase.PersonaId></label>
                    <input class="form-control" asp-for=@Model.AforoClase.PersonaId disabled/>
                </div>
                <div class="form-group">
                    <a class="btn btn-primary" asp-page="./ListAforoClases"  asp-route-claseId="@Model.AforoClase.ClaseId">Lista AforoClases</a>
                </div>
            </form>
        </div>
    </div>
</div>
