@page
@model SafetyComeback.App.FrontEnd.Pages.FPrograma.EditProgramaModel
@{
    ViewData["Title"] = "Editar Programa";
}
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Editar Programa</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for=@Model.Programa.Id />
                <div class="form-group">
                    <label class="control-label" asp-for=@Model.Programa.Nombre></label>
                    <input class="form-control" asp-for=@Model.Programa.Nombre />
                    <span asp-validation-for=@Model.Programa.Nombre class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for=@Model.Programa.FacultadId></label>
                    <input class="form-control" asp-for=@Model.Programa.FacultadId />
                    <span asp-validation-for=@Model.Programa.FacultadId class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input class="btn btn-primary" value="Editar Programa" type="submit" />
                </div>
            </form>
        </div>
    </div>

</div>