@page
@model SafetyComeback.App.FrontEnd.Pages.FPrograma.DetailsProgramaModel
@{
    ViewData["Title"] = "Detalle Programa";
}
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Detalle de Programa</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form  >
                <div class="form-group">
                    <label class="control-label" asp-for=@Model.Programa.Id ></label>
                    <input class="form-control" asp-for=@Model.Programa.Id disabled />
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for=@Model.Programa.Nombre ></label>
                    <input class="form-control" asp-for=@Model.Programa.Nombre disabled />
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for=@Model.Programa.FacultadId></label>
                    <input class="form-control" asp-for=@Model.Programa.FacultadId disabled />
                    <span asp-validation-for=@Model.Programa.FacultadId class="text-danger"></span>
                </div>
                <div class="form-group">
                    <a class="btn btn-primary" asp-page="./ListProgramas" >Lista Programas</a>
                </div>
            </form>
        </div>
    </div>
    
</div>
