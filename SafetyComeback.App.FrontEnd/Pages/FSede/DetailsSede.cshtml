@page
@model SafetyComeback.App.FrontEnd.Pages.FSede.DetailsSedeModel
@{
    ViewData["Title"] = "Detalle Sede";
}
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Detalle de Sede</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form  >
                <div class="form-group">
                    <label class="control-label" asp-for=@Model.Sede.Id ></label>
                    <input class="form-control" asp-for=@Model.Sede.Id disabled />
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for=@Model.Sede.Nombre ></label>
                    <input class="form-control" asp-for=@Model.Sede.Nombre disabled />
                </div>
                
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <h3>Listado de Salones</h3>
        </div>
        @if (Model.Sede.Salones.Count()>0)
        {
            <table class="table table-sm table-bordered table-striped">
                
                    <thead>
                        <tr>
                            <td>Id</td>
                            <td>Número</td>
                            <td>Aforo máximo</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var salon in Model.Sede.Salones)
                        {
                        <tr>
                            <td>@salon.Id</td>
                            <td>@salon.Numero</td>
                            <td>@salon.Aforo</td>
                       </tr>
                        }
                    </tbody>
                   
            </table>
        }
        else
        {
            <p>No existen salones</p>
        }
    </div>
    <div class="form-group">
        <a class="btn btn-primary" asp-page="./ListSedes" >Lista Sedees</a>
    </div>
</div>
