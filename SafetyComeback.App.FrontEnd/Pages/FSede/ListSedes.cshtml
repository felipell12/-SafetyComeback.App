@page
@model SafetyComeback.App.FrontEnd.Pages.FSede.ListSedesModel
@{
    ViewData["Title"] = "Listado Sedes";
}
<div class="container">
    @if (TempData["mensaje"] != null)
    {
        <div class="alert alert-warning alert-dimissible fade show" role="alert">
            @TempData["mensaje"]
            <button type="button" class="close" date-dismiss="alert" aria-label="close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de Sedes</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-page="./CreateSede">Crear</a>
        </div>
    </div>
    <div class="row">
        @if (Model.listSedes.Count()>0)
        {
            <table class="table table-bordered table-striped">
                
                    <thead>
                        <tr>
                            <td>Id</td>
                            <td>Nombre</td>
                            <td>Acciones</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var sede in Model.listSedes)
                        {
                        <tr>
                            <td>@sede.Id</td>
                            <td>@sede.Nombre</td>
                            <td>
                                <a class="btn btn-warning" asp-page="./EditSede" 
                            asp-route-sedeId="@sede.Id">
                                    <i class="fas fa-address-book fa-lg" aria-hidden="true"></i>
                            </a>
                                <a class="btn btn-danger" asp-page="./DeleteSede" 
                            asp-route-sedeId="@sede.Id">
                                    <i class="fas fa-address-book fa-lg" aria-hidden="true"></i>
                            </a>
                                <a class="btn btn-primary table-btn" asp-page="./DetailsSede" 
                            asp-route-sedeId="@sede.Id">
                                    <i class="fas fa-info-circle fa-lg" aria-hidden="true"></i>
                            </a>
                            </td>
                        </tr>
                        }
                    </tbody>
                   
            </table>
        }
        else
        {
            <p>No existen registros</p>
        }
    </div>

</div>