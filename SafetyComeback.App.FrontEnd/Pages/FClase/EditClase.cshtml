@page
@model SafetyComeback.App.FrontEnd.Pages.FClase.EditClaseModel
@{
    ViewData["Title"] = "Editar Clase";
}
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Editar Clase</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Edit">
                <input type="hidden" asp-for=@Model.Clase.Id />
                 <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label" asp-for=@Model.Clase.ProgramaId></label>
                    <input class="form-control" asp-for=@Model.Clase.ProgramaId/>
                    <span asp-validation-for=@Model.Clase.ProgramaId class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for=@Model.Clase.SalonId></label>
                    <input class="form-control" asp-for=@Model.Clase.SalonId/>
                    <span asp-validation-for=@Model.Clase.SalonId class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for=@Model.Clase.Fecha></label>
                    <input class="form-control" asp-for=@Model.Clase.Fecha/>
                    <span asp-validation-for=@Model.Clase.Fecha class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for=@Model.Clase.Hora></label>
                    <input class="form-control" asp-for=@Model.Clase.Hora/>
                    <span asp-validation-for=@Model.Clase.Hora class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for=@Model.Clase.Duracion></label>
                    <input class="form-control" asp-for=@Model.Clase.Duracion />
                    <span asp-validation-for=@Model.Clase.Duracion class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input class="btn btn-primary" value="Editar Clase" type="submit" />
                </div>
            </form>
        </div>
    </div>

</div>