@page
@model SafetyComeback.App.FrontEnd.Pages.FSalon.ListSalonesModel
@{
    ViewData["Title"] = "Listado Salones";
}
<div class="container">
    @if (TempData["mensaje"] != null)
    {
        <div class="alert alert-warning alert-dimissible fade show" role="alert">
            @TempData["mensaje"]
            <button type="button" class="close" date-dismiss="alert" aria-label="close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de Salones</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-page="./CreateSalon">Crear</a>
        </div>
    </div>
    <div class="row">
        @if (Model.listSalones.Count()>0)
        {
            <table class="table table-bordered table-striped">
                
                    <thead>
                        <tr>
                            <td>Id</td>
                            <td>Numero</td>
                            <td>Aforo máximo</td>
                            <td>Sede</td>
                            <td>Acciones</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var salon in Model.listSalones)
                        {
                        <tr>
                            <td>@salon.Id</td>
                            <td>@salon.Numero</td>
                            <td>@salon.Aforo</td>
                            <td>@salon.Sede.Nombre</td>
                            <td>
                                <a class="btn btn-warning" asp-page="./EditSalon" 
                            asp-route-salonId="@salon.Id">
                                    <i class="fas fa-address-book fa-lg" aria-hidden="true"></i>
                            </a>
                                <a class="btn btn-danger" asp-page="./DeleteSalon" 
                            asp-route-salonId="@salon.Id">
                                    <i class="fas fa-address-book fa-lg" aria-hidden="true"></i>
                            </a>
                                <a class="btn btn-primary table-btn" asp-page="./DetailsSalon" 
                            asp-route-salonId="@salon.Id">
                                    <i class="fas fa-info-circle fa-lg" aria-hidden="true"></i>
                            </a>
                            </td>
                        </tr>
                        }
                    </tbody>
                   
            </table>
        }
        else
        {
            <p>No existen registros</p>
        }
    </div>

</div>