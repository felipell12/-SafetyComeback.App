@page
@model SafetyComeback.App.FrontEnd.Pages.FSalon.DeleteSalonModel
@{
    ViewData["Title"] = "Eliminar Salón";
}
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Eliminar Salón</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form method="post" >
                <input type="hidden" asp-for=@Model.Salon.Id />
                <div class="form-group">
                    <label class="control-label" asp-for=@Model.Salon.Numero></label>
                    <input class="form-control" asp-for=@Model.Salon.Numero disabled/>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for=@Model.Salon.Aforo></label>
                    <input class="form-control" asp-for=@Model.Salon.Aforo disabled/>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for=@Model.Salon.SedeId></label>
                    <input class="form-control" asp-for=@Model.Salon.SedeId disabled/>
                </div>
                <div class="form-group">
                    <input class="btn btn-primary" value="Eliminar Salón" type="submit" />
                </div>
            </form>
        </div>
    </div>

</div>